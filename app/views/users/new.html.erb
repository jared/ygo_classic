<% title "Your Garage Online &raquo; New User" %>

<div class="user_form">
	<h2><a href="#openid" class="right">Use OpenID</a>New User</h2>
	<% form_for :user, :url => user_path do |f| -%>
		<fieldset>
			<legend>New User</legend>
			<ol>
				<%= render :partial => "form", :locals => { :f => f } %>
				<%= render :partial => "options_form", :locals => { :f => f } %>
				<li>
					<label for="user_accept_terms">Terms of Service</label> 
					<%= f.check_box :accept_terms %> <%= error_message_on :user, :accept_terms %>
					<span class="hint">Checking this box indicates that you accept the Your Garage Online <%= link_to 'Terms of Service', tos_url, :popup => ['Terms of Service', 'height=500,width=600,scrollbars=1'] %></span>
				</li>
			</ol>
			<div class="form_extras">
				<p>All fields must be completed to create a user account.</p>
				<p>Your email address is required, but will not be displayed or made available to other users.</p>
				<p>For more information on how the information you provide is used by Your Garage Online, please view our <%= link_to "privacy policy", privacy_path %>.</p>
			</div>
		</fieldset>
		<fieldset class="submit">
			<%= image_submit_tag "buttons/profile/sign_up.gif", :class => 'submit' %>
		</fieldset>
	<% end -%>
	<br class="clear" />
</div>

<div class="user_form">
	<h2><a name="openid"></a>New User via OpenID</h2>
	<% form_tag session_path do -%>
		<fieldset>
			<legend>New User with OpenID</legend>
			<ol>
				<li>
					<label for="openid_url">OpenID</label><br/>
		      <%= text_field_tag "openid_url", nil, :size => 25, :class => 'openid' -%><br />
					<span class="hint">OpenID lets you safely sign in to different websites with a single password. </span>
				</li>
			</ol>
			<div class="form_extras">
				<p>Your Garage Online supports the OpenID protocol.  <a href="http://openid.net/" onclick="window.open(this.href);return false;">Learn more.</a></p>
			</div>
		</fieldset>
		<fieldset class="submit">
			<%= image_submit_tag "buttons/profile/sign_up.gif", :class => 'submit' %>
		</fieldset>
	<% end %>
	<br class="clear" />
</div>