<div id="required_fields">
	<h2>Vehicle Description</h2>
	
	<p class="form_left">
		<label for="car_make">Make</label> <%= error_message_on :car, :make %><br />
		<%= f.text_field :make %>
	</p>
	
	<p class="form_right">
		<label for="car_model">Model</label> <%= error_message_on :car, :model %><br />
		<%= f.text_field :model %>
	</p>

	<p class="form_left">
		<label for="car_year">Year</label> <%= error_message_on :car, :year %><br />
		<%= f.text_field :year %>
	</p>

	<p class="form_right">
		<label for="car_color">Color</label> <%= error_message_on :car, :color %><br />
		<%= f.text_field :color %>
	</p>
	<br class="clear" />
</div> <!-- end required_fields div -->

<div id="optional_fields">
	<h2>Optional Information</h2>
	<p class="optional_fields_info">
		<em>These optional fields will not be shown to other users of the site.  
		If you choose to fill them out, they will only appear when viewing your own cars.</em>
	</p>
	<p class="form_left">
		<label for="car_registration_state">Reg. State</label><br />
		<%= f.text_field :registration_state %>
	</p>
	
	<p class="form_right">
		<label for="car_license_plate">License Plate</label><br />
		<%= f.text_field :license_plate %>
	</p>
	
	<p class="form_span">
		<label for="car_vehicle_identification_number">VIN</label><br />
		<%= f.text_field :vehicle_identification_number %>
	</p>
	
	<p class="form_span">
		<label for="car_notes">Notes</label><br />
		<%= f.text_area :notes, :rows => 5 %>
	</p>


	<br class="clear" />
	<p class="optional_fields_info">
		<em>
			Check this box if you would not like this car to appear as a featured vehicle on the home page.  Private cars cannot be shared via the "Showroom" feature.
		</em>
	</p>
	<p>
		<%= f.check_box :private %> <label for="car_private">Private listing</label><br />
	</p>
	
</div> <!-- end optional_fields div -->
